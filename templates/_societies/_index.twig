{% extends '_layout' %}

{% block content %}
    <div class="wrapper wrapper--hero">
        <div class="hoc clear container section--header">
            <h1>{{ entry.title }}</h1>
            {% if entry.intro|length %}
                <div class="group">
                    <div class="two_third">
                        {{ entry.intro }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    {% set provincies = craft.entries.section('societies') %}
    {% if provincies|length %}
        <div class="wrapper">
            <div class="hoc clear container">
                <ul class="nospace group figures">
                    {% for block in provincies.all() %}
                        <li class="one_third btmspace-30 {% if loop.index in [1,4,7,10,13,16,19,21,24,27,30] %}first{% endif %}">
                            <figure>
                                <img src="{{ block.image.one().getUrl('overviewSquare') }}"
                                     alt="{{ block.title }}">
                                <figcaption>
                                    <a href="{{ block.url }}">{{ block.title }}</a>
                                </figcaption>
                            </figure>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

{% endblock %}